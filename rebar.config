{erl_opts, [
    warn_bif_clash,
    warn_deprecated_function,
    warn_export_all,
    warn_export_vars,
    warn_exported_vars,
    warn_format,
    warn_missing_spec,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_untyped_record,
    warn_unused_function,
    warn_unused_record,
    warn_unused_vars,
    debug_info,
    {parse_transform, lager_transform}
]}.

{minimum_otp_vsn, "19.0"}.

{deps, [
    {lager, {git, "https://github.com/erlang-lager/lager", {tag, "3.6.0"}}},
    {gproc, {git, "https://github.com/uwiger/gproc",       {tag, "0.7.0"}}}
]}.

{profiles, [
    {test, [
        {deps, []}
    ]},
    {docs, [
        {deps, [
            {edown, {git, "https://github.com/uwiger/edown.git", {branch, "master"}}}
        ]},
        {edoc_opts, [
            {doclet, edown_doclet},
            {todo, true},
            {report_missing_types, true},
            {source_path, ["src"]},
            {stylesheet, ""},
            {image, ""},
            {app_default, "http://www.erlang.org/doc/man"}
        ]}
    ]}
]}.
